<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorAccent" />
                </shape>
            </item>

            <item android:bottom="4dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorTextPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorTextGray" />
                </shape>
            </item>

            <item android:bottom="1dp" android:left="0dp" android:right="0dp" android:top="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorTextPrimary" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>